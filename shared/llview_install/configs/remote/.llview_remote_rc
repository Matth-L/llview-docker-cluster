# System name
export LLVIEW_SYSTEMNAME="system"

# Folder locations
export LLVIEW_HOME="/Remote/LLview"
export LLVIEW_DATA="/data"
export LLVIEW_CONF="/Remote/configs"

# Shared folder between Remote and Server (same as $LLVIEW_SHARED in .llview_server_rc)
export LLVIEW_SHARED="/shared/remote_server"

# Shutdown signal file
export LLVIEW_SHUTDOWN="$HOME/HALT_ALL"

# How many days logs should be kept (apart from current day)
export LLVIEW_LOG_DAYS=2

# PERL5 definitions
export PATH="/opt/perl5/bin:${PATH}"
export PERL5LIB="/opt/perl5/lib/perl5"
export PERL_LOCAL_LIB_ROOT="/opt/perl5"
export PERL_MB_OPT="--install_base \"/opt/perl5\""
export PERL_MM_OPT="INSTALL_BASE=/opt/perl5"
export PERL5LIB="/opt/perl5/lib/perl5${PERL5LIB:+:${PERL5LIB}}"

# Python definitions
export LD_LIBRARY_PATH="/usr/lib64:${LD_LIBRARY_PATH}"
export LIBRARY_PATH="/usr/lib64:${LIBRARY_PATH}"
export PYTHONPATH="/usr/lib64/python3/site-packages${PYTHONPATH:+:${PYTHONPATH}}"
export PATH="/usr/bin:${PATH}"